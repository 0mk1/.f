# linux
alias agi="sudo apt-get install"
alias aguu="sudo apt-get update; sudo apt-get upgrade;"
alias agr="sudo apt-get purge"
alias ags="sudo apt-cache search"
alias agl="sudo dpkg -l | grep "
alias t="thunar ."
alias gsync="cd ~/Dokumenty/ && grive && cd ~"
alias sshcopym="ssh-copy-id -i ~/.ssh/id_rsa_main.pub "
alias sshcopyi="ssh-copy-id -i ~/.ssh/id_rsa_intalio.pub "
alias dockr="sudo docker "

# navigation
alias p="cd ~/Projekty/"
alias docs="cd ~/Dokumenty/"
alias pobr="cd ~/Pobrane/"

# git
alias gall="git add -A"
alias gcmt="git commit"
alias gstat="git status --porcelain"
alias glog="git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# vim
alias v="vim"
alias v.="vim ."
alias gentag="ctags -R ."

# python/django
alias djstartp="django-admin startproject "
alias djstarta="python manage.py startapp "
alias djmanage="python manage.py "
