[user]
  name = Mateusz Kamycki
  email = mateusz.kamycki@gmail.com
[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
[core]
	excludesfile = /Users/mkamycki/.gitignore_global
  editor = nvim
[github]
  user = toffi9
[push]
  default = current
[merge]
  ff = only
[help]
  autocorrect = 1
[alias]
  all = add -A
  bdel = branch --delete
  bls = branch -a
  cb = checkout -b
  cmt = commit -v
  co = checkout
  lg = log --color --graph
  rbdel = push origin --delete
  st = status --porcelain
  rbprune = remote update origin --prune
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
