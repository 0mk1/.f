#!/bin/bash

echo "Changing directory to ~/Projekty/dotfiles/"
cd ~/Projekty/dotfiles/

echo "---- Creating symlinks ----"

# Folders
ln -s $PWD/bin/ $HOME
ln -s $PWD/.vim/UltiSnips/ $HOME/.vim/
ln -s $PWD/.fonts/ $HOME
ln -s $PWD/.tmux/ $HOME

# Files
ln -s $PWD/.config/redshift.conf $HOME/.config/
ln -s $PWD/.config/zathura/zathurarc $HOME/.config/zathura/
ln -s $PWD/.config/xfce4/terminal/terminalrc $HOME/.config/xfce4/terminal/
ln -s $PWD/toffi9.zsh-theme $HOME/.oh-my-zsh/themes/
ln -s $PWD/.aliases $HOME
ln -s $PWD/.ctags $HOME
ln -s $PWD/.gitconfig $HOME
ln -s $PWD/.gitignore_global $HOME
ln -s $PWD/.tmux.conf $HOME
ln -s $PWD/.vimrc $HOME
ln -s $PWD/.wallpaper.jpg $HOME
ln -s $PWD/.wallpaper2.jpg $HOME
ln -s $PWD/.zshrc $HOME
