#!/bin/bash

echo "Changing directory to ~/Projekty/dotfiles/"
cd ~/Projects/dotfiles/

echo "---- Creating symlinks ----"

# Folders
ln -fs $PWD/bin/ $HOME
ln -fs $PWD/.vim/ $HOME

# Files
ln -fs $PWD/toffi9.zsh-theme $HOME/.oh-my-zsh/themes/
ln -fs $PWD/.aliases $HOME
ln -fs $PWD/.gitconfig $HOME
ln -fs $PWD/.gitignore_global $HOME
ln -fs $PWD/.tmux.conf $HOME
ln -fs $PWD/.vimrc $HOME
ln -fs $PWD/.hgrc $HOME
ln -fs $PWD/.zshrc $HOME
ln -fs $PWD/.ctags $HOME
